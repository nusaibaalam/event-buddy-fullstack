datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings Booking[]
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String
  location    String
  date        DateTime
  capacity    Int
  imageUrl    String?
  tags        Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bookings Booking[]

  @@index([date])
}

model Booking {
  id        String   @id @default(cuid())
  userId    String
  eventId   String
  seats     Int
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  event Event @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId]) // one booking per user per event
}

enum Role {
  USER
  ADMIN
}
